<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/console.xml"/>

    <springProfile name="default">
        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>
                    %clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(%5p) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx
                </Pattern>
            </layout>
        </appender>
        <root level="info">
            <appender-ref ref="STDOUT" />
        </root>
    </springProfile>

    <springProfile name="!default">
        <appender name="stdout"
                  class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <writeVersionAsInteger>true</writeVersionAsInteger>
                <includeContext>true</includeContext>
                <includeCallerData>true</includeCallerData>
                <fieldNames>
                    <timestamp>timestamp</timestamp>
                    <message>log</message>
                    <thread>thread_name</thread>
                    <logger>logger_name</logger>
                    <version>@version</version>
                    <levelValue>level_value</levelValue>
                    <caller>trace</caller>
                    <stackTrace>exception</stackTrace>
                    <mdc>context</mdc>
                </fieldNames>
            </encoder>
        </appender>
        <root level="info">
            <appender-ref ref="stdout"/>
        </root>
    </springProfile>
</configuration>
